<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#282634">


        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/imageView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">

            <RadioButton
                android:id="@+id/radio_button_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:layout_marginBottom="19dp"
                android:text="teacher"
                app:layout_constraintBottom_toTopOf="@+id/imageView3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView3"
                app:layout_constraintVertical_bias="0.236" />

            <RadioButton
                android:id="@+id/radio_button_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="17dp"
                android:text="student" />
        </RadioGroup>

        <EditText
            android:id="@+id/etUsername"
            android:layout_width="227dp"
            android:layout_height="48dp"
            android:layout_marginStart="94dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="90dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/shape"
            android:ems="10"
            android:hint="Enter username..."
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:textColorHint="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/etPassSignUp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"
            app:layout_constraintVertical_bias="1.0" />

        <EditText
            android:id="@+id/etPassConfirmSignUp"
            android:layout_width="228dp"
            android:layout_height="48dp"
            android:layout_marginStart="93dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="90dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/shape"
            android:ems="10"
            android:hint="Confirm password..."
            android:inputType="textPassword"
            android:orientation="vertical"
            android:textColorHint="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/btnSignUp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etPassSignUp" />

        <EditText
            android:id="@+id/etPassSignUp"
            android:layout_width="229dp"
            android:layout_height="48dp"
            android:layout_marginStart="93dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="90dp"
            android:background="@drawable/shape"
            android:ems="10"
            android:hint="Enter password..."
            android:inputType="textEmailAddress"
            android:textColorHint="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/etPassConfirmSignUp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etEmailSignUp" />


        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:layout_marginBottom="120dp"
            android:backgroundTint="#FE4057"
            android:text="Register"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etPassConfirmSignUp" />

        <EditText
            android:id="@+id/etEmailSignUp"
            android:layout_width="227dp"
            android:layout_height="48dp"
            android:layout_marginStart="94dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="90dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/shape"
            android:ems="10"
            android:hint="Enter email..."
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:textColorHint="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/etPassSignUp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" />

        <TextView
            android:id="@+id/signUpToLogInTxt"
            android:layout_width="235dp"
            android:layout_height="48dp"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="38dp"
            android:backgroundTint="#FE4057"
            android:clickable="true"
            android:text="Already have an account? Log in here!"
            android:textAlignment="center"
            android:textColor="#815454"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnSignUp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="298dp"
            android:layout_height="256dp"
            android:layout_marginStart="54dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="54dp"
            android:layout_marginBottom="27dp"
            android:src="@drawable/easylogo"
            app:layout_constraintBottom_toTopOf="@+id/etEmailSignUp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>